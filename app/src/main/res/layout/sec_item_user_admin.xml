<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation_default"
    app:cardBackgroundColor="@color/fondo_principal_beige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/card_padding_small"
        android:background="@drawable/txt_rounded_corner_green">

        <ImageView
            android:id="@+id/img_indicador_estado"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:src="@drawable/ic_admin_active_user"
            android:contentDescription="@string/desc_indicador_activo" />

        <TextView
            android:id="@+id/text_nombre_usuario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_start"
            android:text="@string/usuario_activo"
            android:textSize="@dimen/text_size_default" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_usuario"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usuario_ver"
            android:textColor="@color/verde_azulado_profundo"
            app:icon="@drawable/ic_admin_visibility_user"
            app:iconTint="@color/verde_azulado_profundo"
            app:iconGravity="textStart"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>