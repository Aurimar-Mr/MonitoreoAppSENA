<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/txt_rounded_corner_green"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Estado del sensor de gas"
        style="@style/TextAppearance.CardTitle" />

    <TextView
        android:id="@+id/card_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        tools:text="Activo"
        style="@style/TextAppearance.CardStatus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="@dimen/spacing_large"
            android:layout_height="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_small"
            android:contentDescription="@string/desc_graph_gas"
            tools:src="@drawable/ic_graph_metano_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sensor_readings_realtime"
            style="@style/TextAppearance.CardLabel" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/card_line_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_section_top" />

</LinearLayout>