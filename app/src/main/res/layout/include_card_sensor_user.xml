<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/txt_rounded_corner_green"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textColor="@color/texto_oscuro"
        android:textSize="@dimen/text_size_l"
        tools:text="Estado del sensor de gas" />

    <TextView
        android:id="@+id/card_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xs"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_l"
        android:textStyle="bold"
        tools:text="Activo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xs"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_marginEnd="@dimen/margin_xxs"
            android:contentDescription="@string/desc_icono_grafico"
            tools:src="@drawable/ic_graph_metano_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/lecturas_en_tiempo_real"
            android:textColor="@color/texto_oscuro"
            android:textSize="@dimen/text_size_m" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/card_line_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_height" />

</LinearLayout>