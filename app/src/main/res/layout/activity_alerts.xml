<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alerta_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_ligero"
    tools:context=".ui.user.AlertsActivity">

    <ImageView
        android:id="@+id/alerta"
        android:layout_width="175dp"
        android:layout_height="123dp"
        android:contentDescription="@string/remember_me"
        android:src="@drawable/img_user_alert"
        app:layout_constraintBottom_toTopOf="@id/alerta_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/alerta_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alerta"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/montserrat_extrabold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/alerta"
        app:layout_constraintBottom_toTopOf="@id/ia_text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ia_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/naranja_ligero"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alerta_title"
        app:layout_constraintBottom_toTopOf="@id/button_message" >

        <TextView
            android:id="@+id/ia_response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/esperando_datos_del_sensor"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:fontFamily="@font/montserrat" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_border_white_bg_green"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/message"
        android:textColor="#EEEEEE"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ia_text_container"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>