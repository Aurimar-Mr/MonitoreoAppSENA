<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alerta_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_ligero"
    tools:context=".ui.user.AlertsActivity">

    <!-- Imagen principal -->
    <ImageView
        android:id="@+id/alerta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/alerta_icon_desc"
        android:src="@drawable/img_user_alert"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alerta_title"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ImageContrastCheck" />

    <!-- Título -->
    <TextView
        android:id="@+id/alerta_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/alerta"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xlarge"
        android:textStyle="bold"
        app:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@+id/alerta"
        app:layout_constraintBottom_toTopOf="@id/ia_text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor del texto de IA -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ia_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        app:cardBackgroundColor="@color/naranja_ligero"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alerta_title"
        app:layout_constraintBottom_toTopOf="@id/button_message">

        <TextView
            android:id="@+id/ia_response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="@string/esperando_datos_del_sensor"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            app:fontFamily="@font/montserrat" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Botón -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/btn_border_white_bg_green"
        app:backgroundTint="@null"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:text="@string/message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintTop_toBottomOf="@id/ia_text_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
