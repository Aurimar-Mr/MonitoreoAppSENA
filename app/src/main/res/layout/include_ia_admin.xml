<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/fondo_principal_beige">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seccion_ia_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ia_activar_desactivar"
                android:textSize="16sp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_ia_voz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ia_volumen"
                android:textSize="16sp"/>
            <SeekBar
                android:id="@+id/seek_bar_volumen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:progress="50"/>
            <TextView
                android:id="@+id/text_volumen_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ia_volumen_valor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ia_elegir_voz"
                android:textSize="16sp"/>
            <Spinner
                android:id="@+id/spinner_ia_voz"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:entries="@array/tipos_de_voz" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ia_elegir_tono"
                android:textSize="16sp"/>
            <Spinner
                android:id="@+id/spinner_tono_voz"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:entries="@array/tonos_de_voz" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>